<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FormFragment">

    <TextView
        android:id="@+id/tvFormStudentIdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_number"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etStudentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/student_number_hint"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFormStudentIdTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvFormStudentIdTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStudentId" />

    <EditText
        android:id="@+id/etStudentId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/student_name_hint"
        android:inputType="textAutoCorrect"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFormStudentIdTitle2" />

    <TextView
        android:id="@+id/tvFormStudentAgeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_age"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStudentId2" />

    <EditText
        android:id="@+id/etStudentAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/student_age_hint"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFormStudentAgeTitle" />

    <TextView
        android:id="@+id/tvFormStudentAssignaturesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_assignatures"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStudentAge" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glAssignaturesVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7542579" />

    <EditText
        android:id="@+id/etStudentAssignature_Name_1"
        android:layout_width="307dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/student_assignature_hint"
        android:inputType="textAutoCorrect"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFormStudentAssignaturesTitle" />

    <EditText
        android:id="@+id/etStudentAssignature_Credits_1"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/student_age_assignature_credits"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etStudentAssignature_Name_1"
        app:layout_constraintTop_toBottomOf="@+id/tvFormStudentAssignaturesTitle" />

    <EditText
        android:id="@+id/etStudentAssignature_Name_2"
        android:layout_width="307dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/student_assignature_hint"
        android:inputType="textAutoCorrect"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStudentAssignature_Name_1" />

    <EditText
        android:id="@+id/etStudentAssignature_Credits_2"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/student_age_assignature_credits"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etStudentAssignature_Name_2"
        app:layout_constraintTop_toBottomOf="@+id/etStudentAssignature_Credits_1" />

    <EditText
        android:id="@+id/etStudentAssignature_Name_3"
        android:layout_width="307dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/student_assignature_hint"
        android:inputType="textAutoCorrect"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStudentAssignature_Name_2" />

    <EditText
        android:id="@+id/etStudentAssignature_Credits_3"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/student_age_assignature_credits"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etStudentAssignature_Name_3"
        app:layout_constraintTop_toBottomOf="@+id/etStudentAssignature_Credits_2" />


    <Button
        android:id="@+id/btnAddStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStudentAssignature_Name_3" />


</androidx.constraintlayout.widget.ConstraintLayout>